        },
        "url": {
          "raw": "{{baseUrl}}/persons",
          "host": ["{{baseUrl}}"],
          "path": ["persons"]
        }
      }
    },
    {
      "name": "GET Person by ID",
      "request": {
        "method": "GET",
        "header": [],
